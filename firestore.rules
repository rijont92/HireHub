rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Allow read access to jobs collection for all users
    match /jobs/{jobId} {
      allow read: if true;
      allow write, delete: if isAuthenticated();
    }
    
    // Allow read/write access to applications collection for authenticated users
    match /applications/{applicationId} {
      allow read, write, delete: if isAuthenticated();
    }
    
    // Allow read access to users collection for authenticated users
    // Allow write/delete access only to own document
    match /users/{userId} {
      allow read: if isAuthenticated();  // Any authenticated user can read
      allow write, delete: if isAuthenticated() && request.auth.uid == userId;  // Only own document can be written/deleted
    }

    // Allow read/write access to job history for authenticated users
    match /jobHistory/{document=**} {
      allow read, write, delete: if isAuthenticated();
    }

    // Allow read/write access to saved jobs for authenticated users
    match /savedJobs/{documentId} {
      allow read, write, delete: if isAuthenticated();
    }

    // Allow read/write access to messages for authenticated users
    match /messages/{messageId} {
      allow read, write, delete: if isAuthenticated();
    }

    // Allow read/write access to notifications for authenticated users
    match /notifications/{notificationId} {
      allow read, write, delete: if isAuthenticated();
    }

    // Allow read/write access to chats for authenticated users
    match /chats/{chatId} {
      allow read, write, delete: if isAuthenticated();
    }
  }
} 